<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ba"
    tools:context=".SigninAsDoctor">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ADMIN LOGIN"
        android:textStyle="italic"
        android:textColor="#21201a"
        android:textSize="50dp"
        android:layout_marginTop="30dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffff"
        android:layout_gravity="center_horizontal"
        android:text="Enter the secret code "></TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:autofillHints="#21201a"
        android:id="@+id/admin_secret_code"
        android:layout_gravity="center_horizontal"
        ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="#e6e9f0"
        android:textColor="#409c78"
        android:id="@+id/admin_login"
        android:layout_gravity="center_horizontal"
        android:text="LOGIN"
        ></Button>

</LinearLayout>